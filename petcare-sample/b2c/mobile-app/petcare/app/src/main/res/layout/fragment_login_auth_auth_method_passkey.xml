<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/passkeyLayout"
    tools:context=".ui.activities.login.fragments.auth.auth_method.PasskeyFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/passkeyButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_auth_auth_method_passkey_auth.sign_in"
        android:textColor="@color/asgardeo_colour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/asgardeo_colour"
        android:isCredential="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>